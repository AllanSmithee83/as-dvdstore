<% layout('layout') -%>


<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center"> Search your favourite Movies</h1>
    <p class="text-center">Instant search with AJAX</p>
    <div class= "row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" id="instantSearch" class="form-control input-lg" name="search_term" placeholder="Search for a Product ...">
          <span class="input-group-btn">
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container">

  <div class="row" id="instantSearchResults">

    <% for (var i = 0; i < dvds.length; i++) { %>
    <div class="col-md-4">
      <a href="/movie/<%= dvds[i]._id %>">
        <div class="thumbnail">
          <img src="<%= dvds[i].image %>">
          <div class="caption">
            <h3><%= dvds[i].name %></h3>
            <p><%= dvds[i].ganre %></h3>
            <p><%= dvds[i].price %>.din</p>
          </div>
        </div>
      </a>
    </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 1; i <= pages; i++) { %>
          <% if (i === 1)  {  %>
            <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
          <% } %>

        <% } %>
      </li>

    </ul>


  </div>
</div>
