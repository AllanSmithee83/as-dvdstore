<% layout('layout') -%>


<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <p class="text-center">Admin AREA</p>
    <div class= "row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" id="instantSearch" class="form-control input-lg" name="search_term" placeholder="Search...">
          <span class="input-group-btn">
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
          </span>
		 
        </div>
		  </div>
    </div>
	 <a href="/add-movie" class="btn btn-lg btn-warning">Add Movie</a>
  </div>
</div>



<div class="container">

  <div class="row" id="instantSearchResults">

    <% for (var i = 0; i < dvds.length; i++) { %>
    <div class="col-md-4">
	<a href="/edit-movie/<%= dvds[i]._id %>" class="btn btn-success">
	<i class="glyphicon glyphicon-edit"></i>
	Edit</a>
	<a href="#" class="btn btn-danger delete-movie" data-movie-id="<%= dvds[i]._id %>" data-csrf="{_csrf}"">
	<i class="glyphicon glyphicon-remove"></i>
	Delete</a>
      <a href="/movie/<%= dvds[i]._id %>">
        <div class="thumbnail">
          <img src="<%= dvds[i].image %>">
          <div class="caption">
            <h3><%= dvds[i].name %></h3>
            <p><%= dvds[i].ganre %></h3>
            <p><%= dvds[i].price %>.din</p>
          </div>
        </div>
      </a>
	  
	 </div>
	
	
    <% } %>
	

  


  </div>
</div>
